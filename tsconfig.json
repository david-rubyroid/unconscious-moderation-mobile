{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "lib": ["DOM", "ESNext", "ES2015"],
    "paths": {
      "@/*": ["./src/*"],
      "@/assets/*": ["./assets/*"]
    },
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "dist-*"
  ]
}
